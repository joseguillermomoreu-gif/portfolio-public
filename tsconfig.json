{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./playwright",
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["playwright/pages/*"],
      "@pages": ["playwright/pages/index"],
      "@components/*": ["playwright/components/*"],
      "@components": ["playwright/components/index"]
    },
    "types": ["node", "@playwright/test"]
  },
  "include": [
    "playwright/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
