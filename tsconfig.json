{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./playwright",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["playwright/components/*"]
    },
    "types": ["@playwright/test"]
  },
  "include": [
    "playwright/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
